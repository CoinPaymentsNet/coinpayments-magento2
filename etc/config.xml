<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <coin_payments>
                <active>1</active>
                <model>Coinpayments\CoinPayments\Model\Methods\Coinpayments</model>
                <order_status>pending</order_status>
                <title>Coin Payments</title>
                <allowspecific>0</allowspecific>
                <group>coinpayments</group>
            </coin_payments>
        </payment>
        <coinpayment>
            <conf>
                <url_payment>https://www.coinpayments.net</url_payment>
                <api_payment>https://www.coinpayments.net/api.php</api_payment>
                <api_version>1</api_version>
            </conf>
        </coinpayment>
    </default>`
</config>